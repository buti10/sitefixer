from flask import Blueprint, request, jsonify, current_app
from datetime import datetime
import os, json
from app.extensions import db
from app.models_repair import RepairSession, RepairAction, RepairCheckpoint, RepairLog
from .sftp_ops import list_dir as _list_dir, read_file as _read_file, SFTPUnavailable


bp = Blueprint("repair", __name__, url_prefix="/api/repair")

from .diagnose import run_diagnose

@bp.post("/session")
def create_session():
    d = request.get_json(force=True) or {}
    ticket_id = int(d.get("ticket_id") or 0)
    sid = (d.get("sid") or "").strip()
    root = (d.get("root") or "/").strip()
    if not (ticket_id and sid and root):
        return jsonify({"error":"ticket_id, sid, root required"}), 400
    s = RepairSession(ticket_id=ticket_id, sid=sid, root=root,
                      cms=d.get("cms"), cms_version=d.get("cms_version"))
    db.session.add(s); db.session.commit()
    return jsonify({"session_id": s.id})

@bp.get("/session/<int:session_id>")
def get_session(session_id):
    s = db.session.get(RepairSession, session_id)
    if not s:
        return jsonify({"error":"not found"}), 404
    return jsonify({
        "id": s.id, "ticket_id": s.ticket_id, "sid": s.sid, "root": s.root,
        "cms": s.cms, "cms_version": s.cms_version,
        "created_at": s.created_at.isoformat(), "closed_at": s.closed_at.isoformat() if s.closed_at else None
    })

@bp.post("/checkpoint")
def create_checkpoint():
    d = request.get_json(force=True) or {}
    session_id = int(d.get("session_id") or 0)
    if not session_id:
        return jsonify({"error":"session_id required"}), 400
    base = current_app.config.get("REPAIR_QUARANTINE_BASE", "/var/www/sitefixer/quarantine")
    snap = os.path.join(base, str(session_id), datetime.utcnow().strftime("%Y%m%dT%H%M%SZ"))
    cp = RepairCheckpoint(session_id=session_id, label=(d.get("label") or "checkpoint"), snapshot_dir=snap)
    db.session.add(cp); db.session.commit()
    return jsonify({"checkpoint_id": cp.id, "snapshot_dir": snap})

@bp.post("/action")
def log_action():
    d = request.get_json(force=True) or {}
    session_id = int(d.get("session_id") or 0)
    kind = (d.get("kind") or "").strip()
    if not (session_id and kind):
        return jsonify({"error":"session_id and kind required"}), 400
    a = RepairAction(session_id=session_id, kind=kind,
                     src=d.get("src"), dst=d.get("dst"),
                     meta=d.get("meta") or {}, success=bool(d.get("success")),
                     error_msg=d.get("error_msg"))
    db.session.add(a); db.session.commit()
    return jsonify({"action_id": a.id})

@bp.get("/actions")
def list_actions():
    session_id = int(request.args.get("session_id") or 0)
    if not session_id:
        return jsonify({"error":"session_id required"}), 400
    rows = (RepairAction.query
            .filter_by(session_id=session_id)
            .order_by(RepairAction.id.desc()).all())
    def ser(x):
        return {
            "id": x.id, "kind": x.kind, "src": x.src, "dst": x.dst,
            "meta": x.meta or {}, "success": bool(x.success),
            "error_msg": x.error_msg, "executed_at": x.executed_at.isoformat()
        }
    return jsonify([ser(r) for r in rows])

@bp.post("/log")
def write_log():
    d = request.get_json(force=True) or {}
    session_id = int(d.get("session_id") or 0)
    message = d.get("message") or ""
    if not (session_id and message):
        return jsonify({"error":"session_id and message required"}),400
    lg = RepairLog(session_id=session_id, level=(d.get("level") or "INFO").upper()[:10],
                   message=message, context=d.get("context") or {})
    db.session.add(lg); db.session.commit()
    return jsonify({"ok": True})


@bp.get("/sftp/list")
def sftp_list():
    session_id = int(request.args.get("session_id") or 0)
    path = request.args.get("path")
    if not session_id:
        return jsonify({"error":"session_id required"}), 400
    try:
        body, code = _list_dir(session_id, path)
        return jsonify(body), code
    except SFTPUnavailable as e:
        return jsonify({"error": str(e)}), 500

@bp.get("/file/view")
def file_view():
    session_id = int(request.args.get("session_id") or 0)
    path = request.args.get("path") or ""
    max_bytes = int(request.args.get("max_bytes") or 200000)
    if not (session_id and path):
        return jsonify({"error":"session_id and path required"}), 400
    try:
        body, code = _read_file(session_id, path, max_bytes)
        return jsonify(body), code
    except SFTPUnavailable as e:
        return jsonify({"error": str(e)}), 500

@bp_repair.post("/diagnose")
def repair_diagnose():
    data = request.get_json(silent=True) or {}
    session_id = int(data.get("session_id") or 0)
    root = data.get("root") or "/"
    cms_hint = data.get("cms_hint")
    if not session_id:
        return jsonify({"error":"session_id required"}), 400
    out = run_diagnose(session_id, root, cms_hint)
    if "error" in out: return jsonify(out), 400
    return jsonify(out)
